<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fixed Header Section -->
    <LinearLayout
        android:id="@+id/margine"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="#000000"
        android:orientation="vertical">

        <!-- Search Bar Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Search Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/search" />

                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Search"
                        android:inputType="text"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Profile Avatar -->
            <ImageView
                android:id="@+id/profileAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable News Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/newsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">
            <!-- Existing News Cards will appear here -->
        </LinearLayout>
    </ScrollView>

    <!-- Categories Row at Bottom -->
    <LinearLayout
        android:id="@+id/categoriesRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/academicBtn"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="#525252"
            android:insetTop="-5dp"
            android:insetBottom="0dp"
            android:paddingVertical="12dp"
            android:text="Academic"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/academicBtn2"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="#525252"
            android:insetTop="-5dp"
            android:insetBottom="0dp"
            android:paddingVertical="12dp"
            android:text="Sports"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/academicBtn3"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:backgroundTint="#525252"
            android:insetTop="-5dp"
            android:insetBottom="0dp"
            android:paddingVertical="12dp"
            android:text="Events"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />
    </LinearLayout>
</LinearLayout>
